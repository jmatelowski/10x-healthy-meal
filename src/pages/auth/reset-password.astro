---
import Layout from "@/layouts/Layout.astro";
import RequestPasswordResetForm from "@/components/forms/RequestPasswordResetForm";

const title = "Reset Password - HealthyMeal";
---

<Layout title={title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold tracking-tight">Reset Password</h1>
        <p class="text-muted-foreground mt-2">
          Enter your email address and we'll send you instructions to reset your password.
        </p>
      </div>
      <RequestPasswordResetForm client:load />
    </div>
  </main>
</Layout>
